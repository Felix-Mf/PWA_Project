@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Pages/Shared/_IdentityLayout.cshtml";
}

<div class="row m-0 p-0 ">
    <div class="col-md-6 col-lg-5 col-sm-10 bg-img-sm h-100vh bg-color-green" style="overflow-y: auto;">
        <div class="col-md-10 m-auto IdentityForm h-100vh bg-color-green">
            <section>
                <form id="account" method="post">
                    <div class="col-lg-12 col-sm-12 col-md-12 campaigns text-left page-header-title pl-0">
                        <i class="btn-primary mt-2" style="height: 50px; width: 50px; font-size: 29px;">
                            <img style='image-rendering: auto; height: 100%;' class='align-content-center align-middle' alt='' src='/images/logo1.png' />
                        </i>
                        <h2 class="p-0 m-0">Welcome to the E-Learning Tool</h2>
                        <span class="p-0 m-0">A PWA-project created by Felix Muthmann and Felix Stolze in 2021</span>
                    </div>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Passwort</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                    <div class="form-group pb-5">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <div class="col-md-6 col-lg-7 col-sm-10 p-0">
        <div class="align-middle w-100 text-center d-none d-lg-block d-md-block" style="height: 50vh; top: 25%; position: absolute;">
            <img style='image-rendering: auto; height: 100%;' class='align-content-center align-middle' alt='' src='/images/logo2.png' />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
